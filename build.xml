	     ************************************************************* -->
	
	<target name="delete-config-files">
		  <delete file="${appdir}/help/${dist-linux}SearchConfig.txt"/>		
		  <delete file="${appdir}/help/${dist-mac}SearchConfig.txt"/>		
		  <delete file="${appdir}/help/${dist-win}SearchConfig.txt"/>		
